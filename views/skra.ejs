<div class="errors">
  <%  if (errors && errors.length > 0) { %>
    <h3>Villa við skráningu:</h3>
    <ul>
    <% errors.forEach(function(error){ %>
        <li class="error"><%= error.msg %></li>
      <%  }) %>
    </ul>
 <%  } %>
</div>
<form method="post" action="/insert-game">
  <div class = field>
    <label for="home_name">Heimalið:</label>
    <select id="home_name" name="home_name" value="<%= formData.home_name %>">
      <option value="">--Veldu heimalið--</option>
      <% teams.forEach(function(team) { %>
        <option value="<%= team.id %>"<%= formData.home_name == team.id ? 'selected' : '' %>><%= team.name %></option>
      <% }); %>
    </select>
  </div>
  <div class = field>
    <label for="home_score">Heimaliðs stig:</label>
    <input type="text" id="home_score" name="home_score" value="<%= formData.home_score %>">
  </div>
  
  <div class = field>
    <label for="away_score">Útiliðs stig:</label>
    <input type="text" id="away_score" name="away_score" value="<%= formData.away_score %>">
  </div>
  <div class = field>
    <label for="away_name">Útilið:</label>
    <select id="away_name" name="away_name" value="<%= formData.home_name %>">
      <option value="">--Veldu útilið--</option>
      <% teams.forEach(function(team) { %>
        <option value="<%= team.id %>"<%= formData.away_name == team.id ? 'selected' : '' %>><%= team.name %></option>
      <% }); %>
    </select>
  </div>
  <div class = field>
    <label for="Dagsetning">Dagsetning:</label>
    <input type="datetime-local" id="Dagsetning" name="Dagsetning" value="<%= formData.Dagsetning %>">
  </div>
  <button>Bætta við leik</button>
</form>
